{% extends '::base.html.twig' %}

{% block title %}Elasticsearch - sandbox{% endblock %}

{% block body %}
    <div class="row marketing">
        <div class="col-lg-12">
            {% for result in results %}
                <div class="media">
                    <a class="pull-left" href="#">
                        <img class="media-object" src="{{ result._source.user.profile_image_url_https }}" alt="{{ result._source.user.name }}">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading">{{ result._source.user.name }} (@{{ result._source.user.screen_name }})</h4>
                        <p>{{ result._source.text }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
