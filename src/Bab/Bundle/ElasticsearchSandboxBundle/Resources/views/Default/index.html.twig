{% extends '::base.html.twig' %}

{% block title %}Elasticsearch - sandbox{% endblock %}

{% block body %}
    <div class="row marketing">
        <div class="col-lg-12">
            {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
                <div class="alert alert-danger">
                    {{ form_errors(form) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.query) }}
                    {{ form_widget(form.query, {'attr': {'class': 'form-control', 'rows': '3', 'cols': '70'}}) }}
                    <p class="help-block">Example: "A tweet".</p>
                </div>
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-default'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row marketing">
        <div class="col-lg-12">
            {% for result in results %}
                <div class="media">
                    <a class="pull-left" href="#">
                        <img class="media-object" src="{{ result.user.profile_image_url_https }}" alt="{{ result.user.name }}">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading">{{ result.user.name }} (@{{ result.user.screen_name }})</h4>
                        <p>{{ result.text }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row marketing">
        <div class="col-lg-12">
            <div class="well well-sm">
                {{ query }}
            </div>
        </div>
    </div>
{% endblock %}
